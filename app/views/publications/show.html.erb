<p style="color: green"><%= notice %></p>

<%= render @publication %>

<% if user_signed_in? && @publication.users.include?(current_user) == false && current_user.role == "normal_user" %>
  <%= button_to "Postular", new_user_postulation_path(publication_id: @publication.id), method: :post, class: "btn btn-info text-white mb-2" %>
<% elsif user_signed_in? && @publication.users.include?(current_user) == true && current_user.role != "admin" %>
  <h5>Ya se ha postulado a esta publicación</h5>  
<% end %>

<div>
  <% if user_signed_in? && current_user.role == "admin" %>
  <%= link_to "Editar Publicación", edit_publication_path(@publication), class:"btn btn-success text-white mb-2" %>
  <!-- < %= button_to "Eliminar Publicación", @publication, method: :delete, class: "btn btn-danger text-white mt-5" %> -->
  <% end %>
</div>

<div>
  <%= link_to "Volver a Publicaciones", publications_path, class:"btn btn-info text-white my-3" %>  
</div>
