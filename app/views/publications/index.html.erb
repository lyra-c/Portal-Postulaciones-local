<p class="text-success"><%= notice %></p>

<h1 class="text-center mt-4 fw-bold" style="color: #693950;">Ofertas de Puesto</h1>

<% if user_signed_in? && current_user.role == "admin" %>
  <div class="d-flex justify-content-center my-4">
    <%= link_to "Publicar Nueva Oferta", new_publication_path, class: "btn btn-warning fw-bold fs-5 px-4 py-2" %>
  </div>
<% end %>

<div id="publications" class="container">
  <% @publications.each do |publication| %>
    <div class="card mb-4 shadow-sm" style="background-color: #F0E6D2;">
      <div class="card-body">
        <%= render publication %>
        <div class="d-flex justify-content-end mt-3">
          <%= link_to "Entrar a Oferta", publication, class: "btn btn-primary text-white fw-bold px-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
